{
  "Name": "DirectoryListingProtection",
  "Priority": 119,
  "Statement": {
    "OrStatement": {
      "Statements": [
        {
          "RegexMatchStatement": {
            "RegexString": "(/\\.\\.|\\.\\./|\\.\\.%2[fF]|%2[eE]%2[eE]%2[fF]|%2[eE]%2[eE]/)",
            "FieldToMatch": {"UriPath": {}},
            "TextTransformations": [
              {"Priority": 0, "Type": "URL_DECODE"},
              {"Priority": 1, "Type": "URL_DECODE"}
            ]
          }
        },
        {
          "RegexMatchStatement": {
            "RegexString": "/(admin|backup|config|database|db|logs|temp|tmp|test|dev|debug)/?$",
            "FieldToMatch": {"UriPath": {}},
            "TextTransformations": [
              {"Priority": 0, "Type": "LOWERCASE"}
            ]
          }
        },
        {
          "ByteMatchStatement": {
            "SearchString": "index of",
            "FieldToMatch": {"Body": {"OversizeHandling": "CONTINUE"}},
            "TextTransformations": [
              {"Priority": 0, "Type": "LOWERCASE"}
            ],
            "PositionalConstraint": "CONTAINS"
          }
        }
      ]
    }
  },
  "Action": {"Block": {}},
  "VisibilityConfig": {
    "SampledRequestsEnabled": true,
    "CloudWatchMetricsEnabled": true,
    "MetricName": "DirectoryListing"
  }
}
